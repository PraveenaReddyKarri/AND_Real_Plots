<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.grgroup.hexabuild.sitevisit.SiteVisiting" />

        <variable
            name="model"
            type="com.grgroup.hexabuild.sitevisit.SiteVisitRequest" />

        <!--        <variable-->
        <!--            name="model2"-->
        <!--            type="com.grgroup.hexabuild.newreferal.TitlesResponse" />-->

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:context=".sitevisit.SiteVisiting">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_5sdp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_25sdp"
                            android:orientation="vertical">


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/textInputLayout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_marginEnd="@dimen/_12sdp">


                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/usernameEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:digits="@string/letters_numbers"
                                    android:hint="@string/name"
                                    android:inputType="textPersonName"
                                    android:maxLength="40"
                                    android:maxLines="1"
                                    android:textSize="@dimen/_12sdp"
                                    android:singleLine="true"
                                    android:text="@={model.customername}" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/mobileInputLayout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_12sdp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/mobileEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:digits="0123456789"
                                    android:hint="@string/mobile_no"
                                    android:inputType="phone"
android:textSize="@dimen/_12sdp"
                                    android:maxLength="10"
                                    android:text="@={model.contactno}" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"


                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:text="Address"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/_15sdp" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:background="@drawable/round_corner"
                                android:inputType="textMultiLine"
                                android:lines="5"
                                android:gravity="top|left"
                                android:minLines="5"
                                android:focusable="true"
                                android:overScrollMode="always"
                                android:padding="10dp"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:text="@={model.address}" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/referal_date"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                                android:focusable="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:hint="@string/select_date"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:background="@color/black" />


                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:layout_width="match_parent"

                                android:id="@+id/current"
                                android:text="Share Location"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:textColor="@color/blue"
                                android:checked="false"
                                android:layout_height="wrap_content"/>


                            <Button
                                android:id="@+id/location"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:backgroundTint="@color/button"
                                android:drawableEnd="@drawable/ic_baseline_location_on_24"
                                android:fontFamily="@font/raleway_bold"
                                android:text="Get Location"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/lat"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_30sdp" />

                            <TextView
                                android:id="@+id/lang"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_10sdp"

                                android:layout_marginEnd="@dimen/_30sdp" />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                >

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"

                                android:text="Select/Capture Images"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:textColor="@color/blue"
                                android:checked="false"
                                android:layout_height="wrap_content"/>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="@dimen/_12sdp"
                                    android:id="@+id/captureImage"

                                    android:src="@drawable/ic_baseline_camera_alt_24"/>

                            </RelativeLayout>


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/captureImag"
                                android:layout_width="@dimen/_150sdp"
                                android:layout_height="@dimen/_150sdp"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/round_corner"
                                android:scaleType="fitXY"
                                android:visibility="gone"
                                app:srcCompat="@android:drawable/ic_menu_camera" />

                            <Button
                                android:id="@+id/buttonLoadPicture"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:text="Click Picture"

                                android:visibility="gone">

                            </Button>

                            <Button
                                android:id="@+id/Save"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_18sdp"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:backgroundTint="@color/button"
                                android:fontFamily="@font/raleway_bold"
                                android:onClick="@{(view)->fragment.saveData(view)}"

                                android:text="Save"
                                android:textColor="@color/white" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

</layout>