<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.grgroup.hexabuild.myreferals.MyreferalsFragment" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:requiresFadingEdge="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_70sdp"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Team Details"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp"

                    android:visibility="gone" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/topview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/_5sdp">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/managername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_15sdp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imagearrow"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/arrowdown_new"
                        android:visibility="gone" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/_5sdp">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/introducer"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_15sdp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imagearrow1"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/arrowdown_new"
                        android:visibility="gone" />

                    <TableRow style="@style/emi_pay_tab_row">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/empi_pay_text_view1"
                            android:fontFamily="@font/rubik_regular"
                            android:text="My ref Name"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone"

                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Devider_Style"
                            android:visibility="gone" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/child"
                            style="@style/empi_pay_text_view1"
                            android:fontFamily="@font/rubik_regular"
                            android:textSize="@dimen/_12sdp" />

                    </TableRow>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/childlist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:paddingTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp" />
                    <!--                        </androidx.cardview.widget.CardView>-->
                </androidx.appcompat.widget.LinearLayoutCompat>


                <!--                </androidx.cardview.widget.CardView>-->
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>